@using OnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>

@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<h2>Kargo</h2>
<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Kargo Takip No:@Html.TextBox("p")
        <input type="submit" value="ara" />
    </p>
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Kargo Takip No</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personel</td>
            <td>@k.Alıcı</td>
            <td>@k.Tarih</td>
            <td>@k.TakipKodu</td>
            <td><a href="/CariPanel/CariKargoTakip/@k.TakipKodu" class="btn btn-success" style="background-color:lightcoral">Detaylar</a></td>
        </tr>
    }
</table>


