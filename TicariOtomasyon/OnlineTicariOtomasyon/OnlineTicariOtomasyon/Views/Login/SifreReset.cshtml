@{
    Layout = null;
}

<!------ Include the above in your HEAD tag ---------->

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/thumber/css/login.css" rel="stylesheet" />
    <script src="Styles/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/thumber/js/jquery-3.3.1.min.js"></script>
    <script src="~/thumber/js/bootstrap.min.js"></script>
    <link href="~/thumber/css/bootstrap.min.css" rel="stylesheet" />
    <link href="Styles/MainStyle.css" rel="stylesheet" type="text/css" />
    <title>Mağaza Yönetim Sistemi</title>
</head>
<body>
    <div class="container register">
        <div class="row">
            <div class="col-md-12">


                <div class="tab-pane fade show text-align form-new" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <h3 class="register-heading">Şifre Sıfırla</h3>
                    <div class="row register-form">
                        <div class="col-md-12">
                            @using (Html.BeginForm("SifreReset", "Login", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <input type="text" name="CariMail" class="form-control" placeholder="Mail Adresiniz" required />
                                </div>

                                if (ViewBag.hata != null)
                                {
                                    <div class="alert alert-danger">
                                        <h2>@ViewBag.hata</h2>
                                    </div>
                                }                            
                                <div class="form-group">
                                    <input type="submit" class="btnContactSubmit" value="Gönder" />
                                    <a href="/Login/Index/" class="btnContactSubmit">Giriş Yap</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


