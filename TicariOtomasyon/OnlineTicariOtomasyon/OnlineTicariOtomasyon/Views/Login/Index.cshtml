@{
    Layout = null;
}

<!------ Include the above in your HEAD tag ---------->

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/thumber/css/login.css" rel="stylesheet" />
    <script src="Styles/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/thumber/js/jquery-3.3.1.min.js"></script>
    <script src="~/thumber/js/bootstrap.min.js"></script>
    <link href="~/thumber/css/bootstrap.min.css" rel="stylesheet" />
    <link href="Styles/MainStyle.css" rel="stylesheet" type="text/css" />
    <title>Mağaza Yönetim Sistemi</title>
</head>
<body>
    <div class="container register">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Müşteri Girişi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Personel Girişi</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active text-align form-new" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Müşteri Girişi</h3>
                        <div class="row register-form">
                            <div class="col-md-12">
                                <div></div>

                                @using (Html.BeginForm("CariLogin1", "Login", FormMethod.Post))
                                {
                                    if (ViewBag.hata1 != null)
                                    {
                                        <div class="alert alert-danger">
                                            @ViewBag.hata1
                                        </div>
                                    }
                                    <div class="form-group">
                                        <input type="text" name="CariMail" class="form-control" placeholder="Mail adresiniz" required />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="CariSifre" class="form-control" placeholder="Şifreniz" required />
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btnContactSubmit" value="Giriş Yap" />
                                        <a href="/Login/SifreReset/" class="btnForgetPwd" value="Login">Şifre Sıfırla</a>
                                    </div>
                                }

                                

                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade show text-align form-new" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <h3 class="register-heading">Personel Girişi</h3>
                        <div class="row register-form">
                            <div class="col-md-12">
                                @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                                {
                                    @*if (ViewBag.hata1 != null)
                                    {
                                        <div class="alert alert-danger">
                                            @ViewBag.hata1
                                        </div>
                                    }*@
                                    <div class="form-group">
                                        <input type="text" name="KullaniciAd" class="form-control" placeholder="Kullanıcı Adınız" value="" required="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="Sifre" class="form-control" placeholder="Şifreniz" value="" required="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btnContactSubmit" value="Giriş Yap" />
                                        <a href="#" class="btnForgetPwd" value="Login">Şifre Sıfırla</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body >
</html >


