@using OnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>
        @k.Departmanid
    </td>
    <td>
        @k.DepartmanAd
    </td>
    <td>
        <a href="/SilinmisOgeler/DepartmanAktifEt/@k.Departmanid" class="btn btn-success" onclick="return confirm('Gerçekten Aktif Etmek İstiyor Musunuz?')">Departmanı Aktif Et</a>
    </td>
   
    <td><a href="/Departman/DepartmanGetir/@k.Departmanid" class="btn btn-warning">Güncelle</a>
    </td>
</tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }),
new PagedListRenderOptions
{
    LiElementClasses = new List<string>
    { "page-link"}

})


